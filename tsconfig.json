{
  "exclude": [".nuxt", "dist", "node_modules"],
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,

    "baseUrl": ".",
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",

    "typeRoots": ["types"],
    "lib": ["DOM", "ESNext", "ESNext.AsyncIterable"],
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxt/http",
      "@nuxt/image",
      "@eggsydev/vue-lanyard"
    ],
    "paths": {
      "@/*": ["./*"],
      "assets/*": ["assets/*"]
    }
  }
}
